{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedLocals": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2018",
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018"],
    "baseUrl": "./src",
    "paths": {
      "lwc": ["node_modules/@lwc/engine/dist/modules/es2017/engine.js"],
    }
  },
  "include": [
    "src/**/*",
    "node_modules/@lwc/engine/types"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
]
}
